DB_SERVER=localhost
DB_DATABASE=CemacoDB
#Por defecto 1433
DB_PORT=1433
# Usuario de SQL Server (opcional)
# Si no se proporciona, se usará Windows Authentication
DB_USER=sa
# Contraseña de SQL Server (opcional)
# Si no se proporciona, se usará Windows Authentication
DB_PASSWORD=TuContraseña
# Habilitar encriptación SSL para la conexión
DB_ENCRYPT=true
# Confiar en el certificado del servidor (útil para desarrollo)
DB_TRUST_CERT=true
# Clave secreta para firmar los tokens JWT
JWT_SECRET=tu-secret-key-segura-y-muy-larga-cambiar-en-produccion
# Tiempo de expiración del token JWT
# Formatos: 1h, 24h, 7d, etc.
JWT_EXPIRES_IN=24h
# Puerto en el que correrá el servidor
PORT=5000
# Entorno de ejecución (development)
NODE_ENV=development

